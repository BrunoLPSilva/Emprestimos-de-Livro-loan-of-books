@model EmprestimosModel
@{
    ViewData["Title"] = "Cadastrar";
    
}



<div class="container bg-dark p-5 rounded-3">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastrar</h1>
     </div> 

    <form method="post" asp-controller="Emprestimo" asp-action="Cadastrar">
        <div class="form-group">
            <label for="Recebedor" class="form-label text-light">Recebedor</label>
            @* no asp controller se atentar que precisa estar igual na model *@
            <input type="text" class="form-control text-light" asp-for="Recebedor" id="Recebedor" placeholder="Quem esta recebendo o livro?">
            <span class="text-danger" asp-validation-for="Recebedor"></span>@*  Alerta para não deixar cadastrar texto vazio *@
            
        </div>
        <div class="form-group">
            <label for="Fornecedor" class="form-label text-light">Fornecedor</label>
            @* no asp controller se atentar que precisa estar igual na model *@
            <input type="text" class="form-control text-light" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem esta emprestando o livro?">
            <span class="text-danger" asp-validation-for="Fornecedor"></span>@*  Alerta para não deixar cadastrar texto vazio *@
        </div>
        <div class="form-group">
            <label for="Livro" class="form-label text-light">Livros</label>
            <input type="text" class="form-control text-light" asp-for="Livro" id="Livro" placeholder="Qual livro emprestado?">
            <span class="text-danger" asp-validation-for="Livro"></span>@*  Alerta para não deixar cadastrar texto vazio *@
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            @* no asp controller se atentar que precisa estar igual na model *@
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>

        </div>
      
    </form>

    </div>
</div>
