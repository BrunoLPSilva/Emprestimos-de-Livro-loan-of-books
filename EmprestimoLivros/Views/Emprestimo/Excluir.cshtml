@model EmprestimosModel
@{
    ViewData["Title"] = "Excluir Emprestimo";

}



<div class="container bg-dark p-5 rounded-3">

    <div class="mb-5 text-center">
        <h1 class="text-light">Exclusão de Emprestimos</h1>
    </div>
    @* edit post *@
    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
        <input type="hidden" asp-for="Id" />
        <h2 class="text-light">Tem certeza que deseja excluir o registro abaixo?</h2>
        <div class="form-group">
            <label for="Recebedor" class="form-label text-light">Recebedor</label>
            @* no asp controller se atentar que precisa estar igual na model *@
            <input type="text" class="form-control text-light" asp-for="Recebedor" id="Recebedor" placeholder="Quem esta recebendo o livro?" disabled>
           

        </div>
        <div class="form-group">
            <label for="Fornecedor" class="form-label text-light">Fornecedor</label>
            @* no asp controller se atentar que precisa estar igual na model *@
            <input type="text" class="form-control text-light" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem esta emprestando o livro?" disabled>
            
        </div>
        <div class="form-group">
            <label for="Livro" class="form-label text-light">Livros</label>
            <input type="text" class="form-control text-light" asp-for="Livro" id="Livro" placeholder="Qual livro emprestado?" disabled>
            
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Excluir</button>
            @* no asp controller se atentar que precisa estar igual na model *@
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>

        </div>

    </form>

</div>
</div>
